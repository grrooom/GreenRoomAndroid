<resources>
    <style name="TextInputHintStyle">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/standard_gray</item> <!-- 힌트 색상 -->
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item> <!-- Splash 배경 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- BottomNavigationView Active Text Style -->
    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/standard_green</item>
        <item name="android:fontFamily">@font/pretendard_light</item>
    </style>

    <!-- BottomNavigationView Inactive Text Style -->
    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/standard_gray</item>
        <item name="android:fontFamily">@font/pretendard_light</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>

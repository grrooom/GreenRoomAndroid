<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Title Image marked as "그린룸" -->
    <ImageView
        android:id="@+id/onboarding_seq_1_head"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_green_room_title"
        android:contentDescription="@string/ic_green_room_title" />

    <!-- Subtitle marked as "식물이 재미를 만든다" -->
    <TextView
        android:id="@+id/onboarding_seq_1_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물이 재미를 만든다"
        android:textSize="14sp"
        android:textColor="@color/standard_green"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"/>

    <!-- Image with ic_leaf.svg  -->
    <ImageView
        android:id="@+id/onboarding_seq_2_head"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_leaf"
        android:contentDescription="@string/ic_green_room_title"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_2_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만의 식물을 커스텀해요"
        android:textColor="@color/standard_black"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_2_body_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 식물과 닮은 캐릭터를 만들어 보세요"
        android:textColor="@color/standard_black"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_2_body_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소품과 악세서리로 그린룸을 꾸며주세요"
        android:textColor="@color/gray400"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_gravity="start"/>

    <!-- Image with ic_leaf.svg  -->
    <ImageView
        android:id="@+id/onboarding_seq_3_head"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_leaf"
        android:contentDescription="@string/ic_green_room_title"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_3_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이젠 까먹지 않아요"
        android:textColor="@color/standard_black"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_3_body_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캐릭터가 알려주는 관리 주기"
        android:textColor="@color/standard_black"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_3_body_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미션처럼 식물을 관리하면서 쉽고 재미있게 식물을 키워요"
        android:textColor="@color/gray400"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_gravity="start"/>


    <!-- Image with ic_leaf.svg  -->
    <ImageView
        android:id="@+id/onboarding_seq_4_head"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_leaf"
        android:contentDescription="@string/ic_green_room_title"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_4_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물 집사 생활을 한 눈에 살펴요"
        android:textColor="@color/standard_black"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_4_body_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="할 일을 모아보고, 상태를 기록해요"
        android:textColor="@color/standard_black"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/onboarding_seq_4_body_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다이어리에서 식물을 관리하고 일기를 써보세요"
        android:textColor="@color/gray400"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_gravity="start"/>

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginBottom="16dp" />

    <!-- Dots Indicator -->
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/standard_gray"
        app:dotsCornerRadius="4dp"
        app:dotsSize="8dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="1"
        app:selectedDotColor="@color/standard_green"
        app:progressMode="true"
        />

    <Button
        android:id="@+id/onboarding_start_button"
        android:layout_width="@dimen/standard_button_width"
        android:layout_height="@dimen/standard_button_height"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:text="시작하기"
        android:background="@drawable/button_radius_8_background"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="16sp" />
</LinearLayout>


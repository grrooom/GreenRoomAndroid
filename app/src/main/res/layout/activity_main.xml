<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Title -->
    <ImageView
        android:id="@+id/green_room_title"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_green_room_title"
        android:contentDescription="@string/ic_green_room_title" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물이 재미를 만든다"
        android:textSize="14dp"
        android:textColor="@color/standard_green"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center" />

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginBottom="16dp" />

    <!-- Dots Indicator -->
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/standard_gray"
        app:dotsCornerRadius="4dp"
        app:dotsSize="8dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="1"
        app:selectedDotColor="@color/standard_green"
        app:progressMode="true"
        />

    <Button
        android:layout_width="@dimen/standard_button_width"
        android:layout_height="@dimen/standard_button_height"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:text="시작하기"
        android:background="@drawable/button_radius_8_background"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="16sp" />
</LinearLayout>

